<h1>登録済みのユーザー一覧</h1>
<%= link_to '作成',  new_admin_user_path %>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>登録数</th>
      <th>管理者</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
    	  <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin %></td>
        <td><%= link_to '詳細', admin_user_path(user.id) %></td>
        <td><%= link_to '削除', admin_user_path(user.id), method: :delete %></td>
        <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
